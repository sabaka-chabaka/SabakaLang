class Base {
    private int privateField = 1;
    protected int protectedField = 2;
    public int publicField = 3;

    private void privateMethod() {
        print("Base privateMethod");
    }

    protected void protectedMethod() {
        print("Base protectedMethod");
    }

    public void publicMethod() {
        print("Base publicMethod");
        // Internal access should work
        print(privateField);
        privateMethod();
    }
}

class Derived : Base {
    void testProtected() {
        print(super::protectedField);
        super::protectedMethod();
    }
}

void main() {
    Base b = Base();
    b.publicMethod();
    print(b.publicField);
    
    Derived d = Derived();
    d.testProtected();
}

main();
